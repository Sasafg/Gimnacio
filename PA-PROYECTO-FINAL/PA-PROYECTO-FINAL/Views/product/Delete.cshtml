@using PA_PROYECTO_FINAL.Models;
@{
    ViewBag.Title = "Delete";
}




@model Producto

<a href="">
    <img src="~/Assets/img/Delete.png" class="img-fluid" alt="..."
         style="height: 300px; width: 600px; justify-content:center; position:relative">
</a>
<p>
    <button id="volverInicio" class="btn btn-outline-dark">Volver al Inicio</button>

    <script>
    document.getElementById("volverInicio").addEventListener("click", function() {
        window.location.href = "@Url.Action("Index", "Home")";
    });
    </script>
</p>


<hr />
<div>

    <h3>¿Estás seguro que deseas eliminar este producto?</h3>
    <div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.nombreProducto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombreProducto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IdProducto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IdProducto)
            </dd>

        </dl>
        @using (Html.BeginForm("Eliminar", "product", new { id = Model.IdProducto }, FormMethod.Post))
        {
            <button type="submit" class="btn btn-outline-dark">Eliminar Producto</button>

            <button id="volverInicio" class="btn btn-outline-dark">Volver al Inicio</button>

            <script>
    document.getElementById("volverInicio").addEventListener("click", function() {
        window.location.href = "@Url.Action("Index", "Home")";
    });
            </script>

        }
    </div>
</div>


