@model IEnumerable<PA_PROYECTO_FINAL.Models.Venta>






<a href="">
    <img src="~/Assets/img/11.png" class="img-fluid" alt="..."
         style="height: 300px; width: 600px; justify-content:center; position:relative">
</a>



<p>
    <button id="volverInicio" class="btn btn-outline-dark">Volver al Inicio</button>

    <script>
    document.getElementById("volverInicio").addEventListener("click", function() {
        window.location.href = "@Url.Action("Index", "Home")";
    });
    </script>
</p>

<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Fecha de Venta</th>
            <th>SubTotal</th>
            <th>IVA</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var venta in Model)
            {
                <tr>
                    <td>@venta.Id</td>
                    <td>@venta.DiaVenta</td>
                    <td>@String.Format("{0:C}", venta.Subtotal)</td>
                    <td>@String.Format("{0:C}", venta.Iva)</td>
                    <td>@String.Format("{0:C}", venta.Total)</td>
                    <th>@Html.ActionLink("Detalles", "Detail", "Venta", new { Id = @venta.Id }, null)</th>
                </tr>
            }
        }
    </tbody>
</table>
